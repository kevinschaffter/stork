{
	"$schema": "https://biomejs.dev/schemas/2.1.4/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!**/node_modules/**",
			"!**/coverage/**",
			"!**/dist/**",
			"!**/.turbo/**",
			"!**/.next/**",
			"!**/apps/expo-example/.expo/**",
			"!**/.claude/**"
		]
	},
	"formatter": {
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true
	},
	"assist": {
		"enabled": true
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
